<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="688.0" prefWidth="1280.0">
    <!-- Barra de búsqueda y botón "Go" -->
    <HBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <TextField fx:id="searchBar" promptText="Buscar Pokémon" HBox.hgrow="ALWAYS"/>
        <Button text="Go" fx:id="searchButton"/>
    </HBox>

    <!-- ComboBox para la búsqueda por tipos -->
    <ComboBox fx:id="typeComboBox" promptText="Seleccione un tipo" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"/>

    <!-- Contenedor para mostrar los Pokémon en una cuadrícula -->
    <GridPane fx:id="pokemonGrid" hgap="10" vgap="10" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="60">
        <!-- Ejemplo de cómo se podrían estructurar los elementos en la cuadrícula -->
        <!-- <fx:include source="pokemon_item.fxml" /> -->
    </GridPane>

    <!-- Botones de paginación flotantes -->
    <Button text="Anterior" fx:id="previousButton" style="-fx-shape: 'M 100 100 L 300 100 L 200 300 z';"
            AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"/>
    <Button text="Siguiente" fx:id="nextButton" style="-fx-shape: 'M 100 100 L 300 100 L 200 300 z';"
            AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"/>
</AnchorPane>
