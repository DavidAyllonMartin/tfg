<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="100.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.ielena.pokedex.controllers.MoveItemController">

    <VBox spacing="10.0">
        <!-- Define los Insets directamente dentro del VBox -->
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>
        <!-- Cabecera con datos básicos -->
        <HBox spacing="10.0">
            <Label text="Name:"/>
            <Label fx:id="name"/>
        </HBox>
        <HBox spacing="10.0">
            <Label text="Accuracy:"/>
            <Label fx:id="accuracy"/>
            <Label text="Effect Chance:"/>
            <Label fx:id="effectChance"/>
        </HBox>
        <HBox spacing="10.0">
            <Label text="PP:"/>
            <Label fx:id="pp"/>
            <Label text="Priority:"/>
            <Label fx:id="priority"/>
            <Label text="Power:"/>
            <Label fx:id="power"/>
        </HBox>

        <!-- Tipo y Damage Class -->
        <HBox spacing="10.0" fx:id="typeContainer">
        </HBox>

        <!-- Descripción -->
        <HBox spacing="10.0">
            <Label text="Description:"/>
            <Label fx:id="flavorText" wrapText="true"/>
        </HBox>
    </VBox>

</AnchorPane>